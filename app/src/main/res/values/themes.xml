<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cineworld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlay_dark_90</item>
        <item name="colorPrimaryVariant">@color/overlay_dark_30</item>
        <item name="colorOnPrimary">@color/grey_40</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/overlay_dark_50</item>
        <item name="colorSecondaryVariant">@color/overlay_dark_20</item>
        <item name="colorOnSecondary">@color/grey_40</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" >@color/overlay_dark_90</item>
        <item name="android:navigationBarColor">@color/grey_900</item>

        <item name="android:fontFamily">@font/lato</item>
    </style>

</resources>
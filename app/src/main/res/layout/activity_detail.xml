<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.capco.cineworld.ui.detail.DetailViewModel"/>
    </data>

    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progress"
            android:indeterminateTint="@color/grey_3"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.core.widget.NestedScrollView
            android:background="@color/overlay_dark_90"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/contents"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="570dp"
                    android:background="@color/black">

                    <com.capco.widgets.chips.ChipsWidget
                        android:id="@+id/genres"
                        android:elevation="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/image"
                        android:background="@color/black"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/titleLayout"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="20dp"
                        android:gravity="start"
                        android:layout_marginStart="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="The movie name"
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_20"
                        tools:ignore="HardcodedText,SpUsage" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:paddingBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="start"
                        app:mrb_progressTint="@color/green_900"
                        app:mrb_progressBackgroundTint="@color/grey_60"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:scaleX="1"
                        android:rating="4.2"
                        android:scaleY="1"
                        android:numStars="5"
                        android:stepSize="1"
                        android:isIndicator="true"
                        android:max="5"/>

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/grey_20"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="4.2 Rating"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/votesText"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/grey_20"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5271 Votes"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/overviewLayout"
                    android:background="@color/overlay_dark_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:text="Overview"
                        android:gravity="left"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/grey_20"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:textStyle="italic"
                        android:id="@+id/tagline"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:text="This is a tagline"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/grey_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/overview"
                        android:layout_marginTop="15dp"
                        android:paddingStart="15dp"
                        android:text="This is an overview"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/grey_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/releasedDate"
                        android:layout_marginTop="20dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:text="Released on 11-07-2025"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:gravity="left"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/grey_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <com.capco.widgets.articles.ArticlesWidget
                    android:visibility="gone"
                    android:id="@+id/articlesWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cineworld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlay_dark_70</item>
        <item name="colorPrimaryVariant">@color/overlay_dark_30</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_80</item>
        <item name="colorSecondaryVariant">@color/grey_20</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>

        <item name="android:fontFamily">@font/lato</item>
    </style>
</resources>
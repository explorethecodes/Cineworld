<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cineworld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overlay_dark_80</item>
        <item name="colorPrimaryVariant">@color/overlay_dark_30</item>
        <item name="colorOnPrimary">@color/grey_40</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/overlay_dark_50</item>
        <item name="colorSecondaryVariant">@color/overlay_dark_20</item>
        <item name="colorOnSecondary">@color/grey_40</item>


        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:statusBarColor" >@color/overlay_dark_80</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>

        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.Cineworld.Light">

        <!-- Status bar color. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Cineworld.Dark">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Cineworld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cineworld.NoActionBar.ShortsTheme">
        <item name="colorOnPrimary">@color/grey_90</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

    </style>

    <style name="Theme.Cineworld.NoActionBar.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Cineworld.NoActionBar.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Cineworld.NoActionBar.Black">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor" >@color/overlay_dark_90</item>
        <item name="android:navigationBarColor">@color/overlay_dark_90</item>
    </style>

    <style name="Theme.Cineworld.NoActionBar.NoStatusBar">
        <!--        <item name="colorOnPrimary">@color/colorMaroon</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_5</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:navigationBarColor">@color/grey_5</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Cineworld.NoActionBar.NoStatusBarNew">
        <!--        <item name="colorOnPrimary">@color/grey_90</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_90</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:navigationBarColor">@color/grey_90</item>-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Cineworld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cineworld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>